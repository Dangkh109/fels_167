<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <div class="panel panel-primary center">
      <div class="panel-heading"><h1><%= t :profile_title %></h1></div>
      <div class="panel-body">
        <div>
          <%= link_to avatar_for(@user), @user %>
          <h1 class="my-username"><%= link_to @user.name, @user %></h1>
        </div>
        <div class="border-top-style">
          <%= render "shared/follow"%>
        </div>
      </div>
    </div>
  </aside>
  <aside class="col-md-7 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="center"><%= @type_title %></h1>
      </div>
      <div class="panel-body">
        <% unless @users.nil? %>
          <ul class="users">
            <%= render @users %>
          </ul>
          <div class="center"><%= will_paginate %></div>
        <% end %>
      </div>
    </div>
  </aside>
</div>
