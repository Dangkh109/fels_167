<%= provide :title, t(:lesson) %>
<div class="row">
  <aside class="col-md-2">
    <div class="panel panel-primary">
      <div class="panel-heading center"><%= t :number_lesson %></div>
      <div class="panel-body center">
        <%= @num_lesson %>
      </div>
    </div>
  </aside>
  <aside class="col-md-1"></aside>
  <aside class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <h1><%= @category.name %></h1>
      </div>
      <div class="panel-body">
        <div class="row">
        </div>
        <ul class="users">
          <%= render @lessons %>
        </ul>
        <div class="center"><%= will_paginate %></div>
      </div>
    </div>
  </aside>
</div>
