<%= provide :title, t(:categories_result) %>
<div class="row">
  <aside class="col-md-2">
    <div class="panel panel-primary">
      <div class="panel-heading center limit-height">
        <h2 id="word-header"><%= t :result_all %></h2>
      </div>
      <div class="panel-body center">
        <button type="button" class="btn btn-warning">
          <%= link_to t(:category), categories_path, id: "word-header" %>
        </button>
      </div>
    </div>
  </aside>
  <aside class="col-md-1"></aside>
  <aside class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading center limit-height">
        <h2 id="word-header"><%= t :result %></h2>
      </div>
      <div class="panel-body">
        <ul class="users">
          <% @results.each_with_index do |lesson, index| %>
            <li>
              <%= link_to lesson.category.name, lesson.category %>
              <%= t :score %>
              <%= Result.select{
                |x| x.lesson_id == lesson.id && x.is_correct == true}.size() %>
              <div class="my-margin-right">
                <%= link_to t(:see_detail), result_path(id: lesson.id) %>
              </div>
            </li>
          <% end %>
        </ul>
        <div class="center"><%= will_paginate %></div>
      </div>
    </div>
  </aside>
</div>
