<div class="row">
  <div class="col-md-6">
    <h1 id="my-font"> <%= t :intro %></h1>
    <%= link_to image_tag("login_left.jpg", width: 700, height: 200),
      root_path %>
  </div>
  <div class="col-md-4 col-md-offset-2">
    <h1> <%= t :login_title %> </h1>
    <%= form_for :session, url: login_path do |f|%>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control my-width" %>
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control my-width" %>
      <%= f.submit t(:login_title), class: "btn btn-primary my-width" %>
    <% end %>
    <h2 id="my-style-h2"> <%= link_to t(:signup_title), signup_path %></h2>
  </div>
</div>
