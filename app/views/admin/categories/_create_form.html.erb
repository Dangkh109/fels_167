<%= form_for [:admin, @category] do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: t(:name), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :description, placeholder: t(:description),
      class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit t(:create_category), class: "btn btn-primary",
      class: "btn btn-primary" %>
  </div>
<% end %>
